@using AutoLotDAL_Core2.Models
@model IEnumerable<Inventory>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(expression: model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(expression: model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(expression: model => model.PetName)
        </th>
        <th></th>
    </tr>
    </thead>
<tbody>
@foreach (var item in Model.ToList())
{

    <tr>
        <td>
            @Html.DisplayFor(expression: modelItem => item.Make)
        </td>
        <td>
            @Html.DisplayFor(expression: modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(expression: modelItem => item.PetName)
        </td>
        <td>
            <a asp-controller="Inventory" asp-action="EditAsync" asp-route-id="@item.Id">Edit</a> |
            <a asp-controller="Inventory" asp-action="DetailsAsync" asp-route-id="@item.Id">Details</a> |
            <a asp-controller="Inventory" asp-action="DeleteAsync" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>

